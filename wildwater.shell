  return 0
}


leaks() {
  if [ ! -r "$1" ] ; then
    echo 'Erreur : le chemin d accès au fichier est incorrect ou le script n y a pas accès en lecture'
    exit 1

  else 
    retour=$(./projet_final 'leaks' "$1" "$2")

    if [ "$retour" -ne '0' ] ; then
      echo 'Erreur : code retour de la partie fuite du programme C non égal à 0'
      exit 1
    fi
  fi

  return 0
}


