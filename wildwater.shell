    exit 1

  else 
    retour=$(./projet_final 'histo' 'real' "$1")

    if [ "$retour" -ne '0' ] ; then
      echo 'Erreur : code retour de la partie histogramme du programme C non égal à 0'
      exit 1

    else
      histogrammeImages 'real'
    fi
