}


if [ ! -x 'projet_final.c' ] ; then
  $(gcc -o projet_final main.c avl.c usine.c histogramme.c outils.c leaks.c -Wall -Wextra)
  if [ ! -x 'projet_final.c' ] ; then
    echo 'Erreur : les fichiers pour la compilation du programme C ne sont pas tous présents'
    exit 1
  fi
fi

if [ $# -ne 0 ] ; then
  echo 'Erreur : le script shell ne prend pas d argument'
  exit 1
fi

echo 'Saisissez le chemin d accès du fichier :'
read chemin

if [ ! -r "$chemin" ] ; then
  echo  'Erreur : le chemin d accès au fichier est incorrect ou le script n y a pas accès en lecture'
  exit 1
fi

echo 'Saisissez les instructions à faire exécuter :'
read principal secondaire tertiaire

if [ -n "$tertiaire" ] ; then
  echo  'Erreur : les instructions à faire exécuter sont trop longues'
  exit 1
fi

if [ "$principal" -eq 'histo' ] ; then
  histogramme secondaire "$chemin"

elif [ "$principal" -eq 'leaks' ] ; then
  leaks secondaire "$chemin"

else
  echo 'Erreur : les instructions à faire exécuter sont incorrectes'
  exit 1
fi
